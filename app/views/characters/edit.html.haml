.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", characters_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_character_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_character_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Character
    .inner
      = form_for @character, :url => character_path(@character), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
