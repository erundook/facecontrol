.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", conditions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_condition_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_condition_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Condition
    .inner
      = form_for @condition, :url => condition_path(@condition), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
