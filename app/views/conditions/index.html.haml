.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", conditions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_condition_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Conditions
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.condition.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @conditions.each do |condition|
          %tr{:class => cycle("odd", "even")}
            %td
              = condition.id
            %td
              = link_to condition.name, condition_path(condition)
            %td
              = condition.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", condition_path(condition)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_condition_path(condition)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", condition_path(condition), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @conditions
- content_for :sidebar, render(:partial => 'sidebar')
